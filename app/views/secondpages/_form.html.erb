<%= form_for @secondpage, :url => {:action => :create, :id => @homepage.id }  do |f| %>
  <div class="field">
    <%= f.label :rollnumber %><br />
    <%= f.number_field :rollnumber %>
  </div>
  <div class="field">
    <%= f.label :classname %><br />
    <%= f.text_field :classname %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
